{
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  // ref: https://github.com/githubnext/monaspace
  // "editor.fontFamily": "'Monaspace Krypton', monospace",
  // "editor.fontFamily": "'Monaspace Argon', monospace",
  "editor.fontFamily": "'Monaspace Neon', monospace",
  // "editor.fontFamily": "'Monaspace Radon', monospace",
  // "editor.fontFamily": "'Monaspace Xenon', monospace",
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
  "editor.fontSize": 13,
  "editor.fontWeight": "400",
  "editor.lineHeight": 1.4,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.tabSize": 2,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "explorer.confirmDragAndDrop": false,
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": true,
  "remote.autoForwardPortsSource": "hybrid",
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  // "terminal.integrated.fontFamily": "'Monaspace Argon', monospace",
  // "terminal.integrated.fontFamily": "'Monaspace Krypton', monospace",
  // "terminal.integrated.fontFamily": "'Monaspace Argon', monospace",
  "terminal.integrated.fontFamily": "'Monaspace Neon', monospace",
  // "terminal.integrated.fontFamily": "'Monaspace Radon', monospace",
  // "terminal.integrated.fontFamily": "'Monaspace Xenon', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontWeightBold": "400",
  "terminal.integrated.tabs.enabled": true,
  "window.zoomLevel": 1,
  "window.commandCenter": false,
  // "window.title": "",
  "window.nativeFullScreen": false,
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.startupEditor": "none",
  "editor.accessibilitySupport": "off",
  "debug.console.fontFamily": "'Monaspace Neon', monospace",
  "github.copilot.editor.enableAutoCompletions": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.editor.enablePreview": false,
  "go.toolsManagement.autoUpdate": true,
  "workbench.colorTheme": "Catppuccin Macchiato",
  "terraform.languageServer.enable": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  // we try to make semantic highlighting look good
  "editor.semanticHighlighting.enabled": true,
  // prevent VSCode from modifying the terminal colors
  "terminal.integrated.minimumContrastRatio": 1,
  // make the window's titlebar use the workbench colors
  "window.titleBarStyle": "custom",
  // applicable if you use Go, this is an opt-in flag!
  "gopls": {
    "ui.semanticTokens": true,
  },
  // pink as the accent color
  "catppuccin.accentColor": "pink",
  // make Mocha specifically very dark
  // (this preserves other flavors!)
  "catppuccin.colorOverrides": {
    "mocha": {
      "base": "#000000",
      "mantle": "#010101",
      "crust": "#020202",
    },
  },
  // use your accent (pink) on the statusBar as well
  "catppuccin.customUIColors": {
    "mocha": {
      "statusBar.foreground": "accent",
    },
  },
  "catppuccin.italicKeywords": false,
  "catppuccin.italicComments": true,
  "catppuccin.boldKeywords": false,
}